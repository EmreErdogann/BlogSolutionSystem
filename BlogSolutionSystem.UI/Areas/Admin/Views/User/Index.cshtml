@model UserListDto
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mb-3 ">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> Kullanıcı Listesi </a></li>
</ol>

<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4 mt-2">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kullanıcılar Listesi
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered  table-hover table-sm" id="usersTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-Mail Adresi</th>
                        <th>Telefon Numarası</th>
                        <td>Resim</td>
                        <td>İşlemler</td>
                    </tr>
                </thead>
                <tfoot class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-Mail Adresi</th>
                        <th>Telefon Numarası</th>
                        <td>Resim</td>
                        <td>İşlemler</td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var users in Model.Users)
                    {
                        <tr name="@users.Id">
                            <td>@users.Id</td>
                            <td>@users.UserName</td>
                            <td>@users.Email</td>
                            <td>@users.PhoneNumber</td>
                            <td><img src="~/img/@users.Picture" class="my-image-table"/></td>
                            <td>
                                <button class="btn btn-primary btn-sm btn-update" data-id="@users.Id"><span class="fas fa-edit"></span> Güncelle</button>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@users.Id"><span class="fas fa-minus-circle"></span> Sil</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


