@model ArticleListDto
@{
    ViewData["Title"] = "Makaleler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 ">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index"><i class="fas fa-newspaper"></i> Makale Listesi </a></li>
</ol>

<div class="card mb-4 mt-2">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Makale Listesi
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered  table-hover table-sm" id="articlesTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı</th>
                        <th>Düzenlenme Tarihi</th>
                        <th>Düzenleyen Kullanıcı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı</th>
                        <th>Düzenlenme Tarihi</th>
                        <th>Düzenleyen Kullanıcı</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var articles in Model.Articles)
                    {
                        <tr name="@articles.Id">
                            <td>@articles.Id</td>
                            <td>@articles.Category.Name</td>
                            <td>@articles.Title</td>
                            <td><img src="~/img/@articles.Thumbnail" class="my-image-table" /></td>
                            <td>@articles.Date</td>
                            <td>@articles.ViewsCount</td>
                            <td>@articles.CommentCount</td>
                            <td>@articles.CreatedDate</td>
                            <td>@articles.CreatedByName</td>
                            <td>@articles.ModifiedDate</td>
                            <td>@articles.ModifiedByName</td>
                            <td>
                                <button class="btn btn-primary btn-sm btn-update" data-id="@articles.Id"><span class="fas fa-edit"></span> Güncelle</button>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@articles.Id"><span class="fas fa-minus-circle"></span> Sil</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
